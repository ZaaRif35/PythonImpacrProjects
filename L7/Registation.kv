ScreenManager:
    FirstWindow:
    SecondWindow:
    AppWindow:

<FirstWindow>:
    name: "FirstWindow"
    MDCard:
        size_hint: None, None
        size: "400", "500"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: 69, 78, 1, .5
        elevation: 10
        orientation: "vertical"
        padding: 25
        spacing: 25

        MDLabel:
            id: Label_SignUp
            text: "Sign Up"
            halign: "center"
            font_size: 45

        MDTextField:
            id: username
            hint_text: "Username"
            icon_left: "Email"
            font_size: 18
            width: 200
            size_hint_x: None
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: passw
            hint_text: "Password"
            icon_left: "lock"
            font_size: 18
            width: 200
            size_hint_x: None
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "Sign Up"
            text_color: 0, 127, 255
            line_color: 0, 127, 255
            font_size: 20
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: app.sign_up(username.text, passw.text)

<SecondWindow>:
    name: "SecondWindow"
    MDCard:
        size_hint: None, None
        size: "400", "500"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        orientation: "vertical"
        padding: 25
        spacing: 25

        MDLabel:
            id: Label_reg
            text: "Registration"
            halign: "center"
            font_size: 30

        MDRoundFlatIconButton:
            text: "Sign Up"
            theme_text_color: "Custom"
            text_color: 0, 0, 0
            line_color: 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: app.root.current = "FirstWindow"

<AppWindow>:
    name: "AppWindow"
    MDCard:
        size_hint: None, None
        size: "400", "500"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        orientation: "vertical"
        padding: 25
        spacing: 25

        MDLabel:
            id: AppCard
            text: "Welcome!"
            halign: "center"
            font_size: 30